<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container py-5">
      <div class="row align-items-center mb-5">
        <div class="col-md-8">
          <h1 class="fw-bold display-5 mb-3">Welcome to Blogify</h1>
          <p class="lead text-muted">Explore the latest stories, insights, and ideas from our community.</p>
        </div>
        <div class="col-md-4 text-md-end">
          <% if (locals.user) { %>
            <a href="/blog/add-new" class="btn btn-primary fw-semibold">Share Your Story</a>
          <% } else { %>
            <a href="/signup" class="btn btn-primary fw-semibold">Join the Community</a>
          <% } %>
        </div>
      </div>

      <div class="row g-4">
        <% if (blogs.length > 0) { %>
          <% blogs.forEach(blog => { %>
            <div class="col-md-4">
              <div class="card h-100 shadow-sm border-0">
                <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %>" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                  <h5 class="card-title fw-bold"><%= blog.title %></h5>
                  <p class="card-text text-muted small"><%= blog.body.substring(0, 100) %>...</p>
                  <a href="/blog/<%= blog._id %>" class="btn btn-outline-primary btn-sm fw-semibold">Read More</a>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="col-12 text-center py-5">
            <div class="card bg-light border-0 py-5">
              <h4 class="text-muted">No blogs found yet.</h4>
              <p class="mb-0">Be the first to share something amazing!</p>
            </div>
          </div>
        <% } %>
      </div>
    </div>
    <%- include('./partials/scripts') %>
  </body>
</html>
