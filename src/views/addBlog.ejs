<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Add New Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="card p-4 p-md-5">
            <h2 class="fw-bold mb-4">Create a New Blog</h2>
            <form action="/blog" method="POST" enctype="multipart/form-data">
              <div class="mb-4">
                <label for="coverImage" class="form-label small fw-semibold">Cover Image</label>
                <input
                  type="file"
                  class="form-control"
                  id="coverImage"
                  name="coverImage"
                />
                <div class="form-text mt-2 small text-muted">A high-quality image helps your blog stand out.</div>
              </div>
              
              <div class="mb-4">
                <label for="title" class="form-label small fw-semibold">Title</label>
                <input
                  type="text"
                  class="form-control form-control-lg"
                  id="title"
                  name="title"
                  placeholder="Enter a catchy title..."
                  required
                />
              </div>

              <div class="mb-4">
                <label for="body" class="form-label small fw-semibold">Content</label>
                <textarea 
                  name="body" 
                  class="form-control" 
                  id="body" 
                  rows="10" 
                  placeholder="Tell your story..."
                  required
                ></textarea>
              </div>

              <div class="d-flex justify-content-end gap-2 mt-4">
                <a href="/" class="btn btn-light fw-semibold px-4">Cancel</a>
                <button type="submit" class="btn btn-primary fw-semibold px-4">Publish Blog</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <%- include('./partials/scripts') %>
  </body>
</html>
